<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3C3C3C"
    android:gravity="clip_horizontal|center|clip_vertical"
    android:orientation="vertical"
    android:padding="50dp"
    android:stretchColumns="*"
    android:textAlignment="center">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-black"
        android:lineSpacingExtra="10sp"
        android:shadowDx="3dp"
        android:shadowDy="3dp"
        android:shadowRadius="5dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#d4d4d4"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">


        <EditText
            android:id="@+id/placeholder"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_span="4"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textSize="25sp" />


    </TableRow>



    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">

        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="CE"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="C"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="←"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="/"
            android:textAlignment="center"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="7"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="8"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="9"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="╳"
            android:textAlignment="center"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="6"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="─"
            android:textAlignment="center"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="2"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button

            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="3"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp"
        android:padding="2dp">

        <Button
            android:id="@+id/plusminus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="±"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="."
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:background="@android:drawable/alert_light_frame"
            android:padding="5dp"
            android:text="="
            android:textAlignment="center"
            android:textSize="25sp" />

    </TableRow>


</TableLayout>


